<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="567.0" prefWidth="653.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="org.example.javafx_hibernate.ui.controller.MainController">

    <top>
        <ToolBar
                style="-fx-background-image: url('/images/fondos/2358.jpg');
                   -fx-background-size: cover;
                   -fx-background-position: center center;
                    -fx-background-repeat: no-repeat;
                    -fx-padding: 4;">

            <Label text="Catálogo de copias de películas"
                   style="-fx-background-color: rgba(255,255,255,0.9);
                     -fx-padding: 15;
                     -fx-background-radius: 5;"/>
            <Pane HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="lblBienvenida" layoutX="128.0" layoutY="4.0" text="Bienvenido"
                       style="-fx-background-color: rgba(255,255,255,0.9);
                -fx-padding: 15;
                -fx-background-radius: 5;
                -fx-font-size: 32x;
                -fx-text-fill: COLOR.white;"/>
            </children></Pane>
            <Button onAction="#onCerrarSesion" text="Cerrar sesión"
                   />
        </ToolBar>
    </top>
   <center>
      <TableView fx:id="tvCopias" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colTitulo" prefWidth="350.0" text="Titulo" />
          <TableColumn fx:id="colEstado" prefWidth="120.0" text="Estado" />
            <TableColumn fx:id="colSoporte" prefWidth="120.0" text="Soporte" />
            <TableColumn fx:id="colCantidad" prefWidth="57.0" text="Cantidad" />
        </columns>
      </TableView>

   </center>
    <bottom>
        <ToolBar prefHeight="40.0" BorderPane.alignment="CENTER"
                 style="-fx-background-image: url('/images/fondos/2358.jpg');

                    -fx-background-size: cover;
                    -fx-background-position: center center;
                    -fx-background-repeat: no-repeat;
                    -fx-padding: 4;">

            <items>
                <Button fx:id="btnNuevaCopia" text="Añadir copia" onAction="#onNuevaCopia"/>
                <Button fx:id="btnEditarCopia" text="Editar copia" onAction="#onEditarCopia"/>
                <Button fx:id="btnEliminarCopia" text="Eliminar copia" onAction="#onEliminarCopia"/>

            </items>
        </ToolBar>

    </bottom>

</BorderPane>
