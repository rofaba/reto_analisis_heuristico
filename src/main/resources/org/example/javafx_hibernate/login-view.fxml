<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.javafx_hibernate.ui.controller.LoginController"
            prefWidth="400" prefHeight="300"
            minWidth="400" minHeight="300"
            maxWidth="400" maxHeight="300"
            style="-fx-background-image: url('/images/fondos/2358.jpg');
            -fx-background-size: cover;
            -fx-background-position: center center;
            -fx-background-repeat: no-repeat;">
    <center>
        <VBox spacing="10.0" alignment="CENTER"
              style="-fx-background-color: rgba(255,255,255,0.9);
                 -fx-padding: 20;
                 -fx-background-radius: 5;"
              prefWidth="360">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Login" style="-fx-font-size: 18px; -fx-font-weight: bold;" alignment="CENTER"/>

            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" percentWidth="40"/>
                    <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" percentWidth="60"/>
                </columnConstraints>

                <Label text="Usuario *:" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="CENTER"/>
                <TextField fx:id="txtUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1" maxWidth="220"/>

                <Label text="ContraseÃ±a: *" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER"/>
                <PasswordField fx:id="txtPassword" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="220"/>
                <Label text="* Campos obligatorios" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 10px; -fx-text-fill: gray;" alignment="CENTER"/>
            </GridPane>

            <Button text="Ingresar" onAction="#onLogin" maxWidth="120"/>
            <Label fx:id="lblMensaje" textFill="red" alignment="CENTER"/>
        </VBox>
    </center>

</BorderPane>

